/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding-top: 44px;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.logo {
  width: 100%;
  height: 100px;
  margin-bottom: 20px;
  /* 圆角 */
  border-radius: 5px;
}
.input-group {
  width: 100%;
  margin-bottom: 20px;
}

.input-item {
  width: 95%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  margin-bottom: 10px;
  padding: 0 10px;
}

.search-btn {
  width: 100%;
  background-color: #07c160;
  color: white;
  margin-top: 20px;
  margin-bottom: 20px;
}

.search-btn[disabled] {
  background-color: #ccc;
}
